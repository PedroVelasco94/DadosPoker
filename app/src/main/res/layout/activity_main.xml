<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#C8E6C9"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="100px"
        android:id="@+id/lblDado1"
        android:layout_alignTop="@+id/lblDado2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="100px"
        android:id="@+id/lblDado2"
        android:layout_alignTop="@+id/lblDado3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="100px"
        android:id="@+id/lblDado3"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROLL"
        android:id="@+id/ROLL"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="100px"
        android:id="@+id/Resul"
        android:layout_above="@+id/ROLL"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbDado1"
        android:layout_marginTop="39dp"
        android:checked="false"
        android:layout_below="@+id/lblDado1"
        android:layout_alignLeft="@+id/lblDado1"
        android:layout_alignStart="@+id/lblDado1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbDado2"
        android:checked="false"
        android:layout_alignTop="@+id/cbDado1"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbDado3"
        android:checked="false"
        android:layout_alignTop="@+id/cbDado2"
        android:layout_alignRight="@+id/lblDado3"
        android:layout_alignEnd="@+id/lblDado3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="100px"
        android:id="@+id/lblDado4"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cbDado1"
        android:layout_toEndOf="@+id/cbDado1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="100px"
        android:id="@+id/lblDado5"
        android:layout_alignTop="@+id/lblDado4"
        android:layout_toLeftOf="@+id/cbDado3"
        android:layout_toStartOf="@+id/cbDado3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbDado4"
        android:checked="false"
        android:layout_below="@+id/lblDado4"
        android:layout_alignLeft="@+id/lblDado4"
        android:layout_alignStart="@+id/lblDado4"
        android:layout_marginTop="39dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbDado5"
        android:checked="false"
        android:layout_alignTop="@+id/cbDado4"
        android:layout_alignRight="@+id/lblDado5"
        android:layout_alignEnd="@+id/lblDado5" />
</RelativeLayout>
